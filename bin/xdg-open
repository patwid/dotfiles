#!/usr/bin/env --split-string=sh -eu

case "${1%%:*}" in
	http|https)
		exec qutebrowser "$1"
		;;
	*.pdf)
		exec zathura "$1"
		;;
	*.png|*.jpg)
		exec imv "$1"
		;;
	*.mkv|*.mp3|*.flac)
		exec mpv "$1"
		;;
	mailto)
		exec "$TERM" aerc "$1"
		;;
	*)
		echo "Don't know how to open $@" >&2
		;;
esac
