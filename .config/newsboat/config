auto-reload yes
reload-threads 100
text-width 72
show-keymap-hint no
goto-next-feed no
ignore-mode "display"
prepopulate-query-feeds yes

bind-key j next
bind-key k prev
bind-key J next-feed
bind-key K prev-feed
bind-key h quit
bind-key j down article
bind-key k up article
bind-key l open
bind-key J next article
bind-key K prev article

browser "setsid --fork $BROWSER >/dev/null 2>&1 %u"

macro m set browser "setsid --fork mpv --wayland-app-id=player >/dev/null 2>&1 %u" ; open-in-browser ; set browser "setsid --fork $BROWSER >/dev/null 2>&1 %u"
macro u set browser "setsid --fork umpv --wayland-app-id=player >/dev/null 2>&1 %u" ; open-in-browser ; set browser "setsid --fork $BROWSER >/dev/null 2>&1 %u"

ignore-article "*" "title =~ \"Minimidi\""
